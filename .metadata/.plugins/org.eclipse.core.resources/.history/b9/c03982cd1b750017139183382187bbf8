package com.Android.matchstats;


import java.net.MalformedURLException;
import java.net.URL;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.remote.DesiredCapabilities;
import org.testng.annotations.Test;


import io.appium.java_client.AppiumDriver;
import io.appium.java_client.android.AndroidDriver;


public class Profile {

	public static AppiumDriver driver;

	@Test(priority = 0)
	public void OpenApp() throws MalformedURLException, Exception {

		DesiredCapabilities capabilities = new DesiredCapabilities();
		capabilities.setCapability("appium-version", "1.0");
		capabilities.setCapability("platformName", "Android");
		capabilities.setCapability("platformVersion", "6.0");
		capabilities.setCapability("deviceName", "S6");
		capabilities.setCapability("app", "/Users/reenupanwar/Desktop/builds/stagedebug.apk");
		driver = new AndroidDriver(new URL("http://127.0.0.1:4723/wd/hub"), capabilities);
		Thread.sleep(15000);
	}

	@Test(priority = 1)
	public void Login() throws MalformedURLException, Exception {

		driver.findElement(By.id("et_email")).sendKeys("baily.bain");
		driver.findElement(By.id("et_password")).sendKeys("baily123");
		driver.findElement(By.id("btn_login")).click();
		Thread.sleep(5000);
		WebElement contact = driver.findElement(By.id("com.pitchvision.stage.debug:id/indicator"));
		int wide = contact.getSize().width;
		int hgt = contact.getSize().height;

		int startx = (int) (wide * (0.9));
		int endx = (int) (wide * (0.2));
		int starty = hgt / 2;
		int endy = hgt / 2;

		// To move from Fav to all contacts, we need to swipe from right to left
		driver.swipe(startx, starty, endx, endy, 1000);
		driver.swipe(startx, starty, endx, endy, 1000);
		driver.swipe(startx, starty, endx, endy, 1000);
		driver.swipe(startx, starty, endx, endy, 1000);
		driver.swipe(startx, starty, endx, endy, 1000);

		driver.findElement(By.id("btn_continue")).click();

		System.out.println("All user guide slides are moved.");
	}

	@Test(priority = 2)
	public void clickProfile() throws Exception {
		driver.findElement(By.xpath("//android.widget.ImageButton[@index='0']")).click();
		driver.findElement(By.id("cim_profile_pic")).click();
		Thread.sleep(5000);
	}

	@Test(priority = 3)
	public void banner() throws Exception {
		driver.findElement(By.id("action_camera")).click();
		driver.findElement(By.id("text1")).click();
		Thread.sleep(5000);
		driver.findElement(By.id("com.android.camera:id/shutter_button_icon")).click();
		driver.findElement(By.id("com.android.camera:id/review_btn_done")).click();
		driver.findElement(By.xpath("//android.widget.FrameLayout[1]/android.widget.FrameLayout[1]/"
				+ "android.widget.RelativeLayout[1]/android.widget.LinearLayout[1]/"
				+ "android.widget.FrameLayout[2]/android.widget.TextView[1]")).click();
		Thread.sleep(7000);
		//driver.pressKeyCode(AndroidKeyCode.KEYCODE_CAMERA);		
		//driver.sendKeyEvent(KeyEvent.KEYCODE_CAMERA);
//		driver.findElement(By.id("shutter_button_icon")).click();
//		driver.findElement(By.id("review_btn_done")).click();
//		driver.findElement(By.id("btn_done")).click();
//		Thread.sleep(5000);
	}

}
