import java.io.File;
import java.io.FileInputStream;

import org.apache.poi.xssf.usermodel.XSSFSheet;
import org.apache.poi.xssf.usermodel.XSSFWorkbook;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.firefox.FirefoxDriver;

public class DataDriven {

	static WebDriver driver;

	public static void main(String[] args) {

		try {
			// Specify the path of file
			File src = new File("/Users/reenupanwar/Desktop/builds/Unames.xlsx");

			// load file
			FileInputStream fis = new FileInputStream(src);

			// Load workbook
			XSSFWorkbook wb = new XSSFWorkbook(fis);

			// Load sheet- Here we are loading first sheetonly
			XSSFSheet sh1 = wb.getSheetAt(0);

			// getRow() specify which row we want to read.

			// and getCell() specify which column to read.
			// getStringCellValue() specify that we are reading String data.

			for (int i = 0; i < 2; i++) {
				driver = new FirefoxDriver();
				driver.get("http://www.demo.guru99.com/V4/");

				driver.findElement(By.xpath("//input[@name='uid']"))
						.sendKeys(sh1.getRow(i).getCell(0).getStringCellValue());
				driver.findElement(By.xpath("//input[@name='password']"))
						.sendKeys(sh1.getRow(0).getCell(1).getStringCellValue());

				driver.findElement(By.xpath("//input[@name='btnLogin']")).click();

				driver.close();
			}

		} catch (Exception e) {

			System.out.println(e.getMessage());

		}

	}

}
